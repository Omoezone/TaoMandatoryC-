@{
    ViewBag.Title = "Calculation";
}
<div style="margin-top:200px">
    <form action="/" style="display:flex">
        <label style="margin-right:5px" for="pnummer">Postnummer:</label><br>
        <input style="margin-right:10px" align="left" type="text" id="pnummer" placeholder="Postnummer"><br>
        <label style="margin-right:5px" for="adresse">Adresse:</label><br>
        <input style="margin-right:10px" align="left" type="text" id="adresse" placeholder="Adresse"><br>
        <label style="margin-right:5px" for="husnummer">Husnummer:</label><br>
        <input style="margin-right:10px" align="left" type="text" id="husnummer" placeholder="Husnummer"><br>
        <input style="margin-left:15px" align="left" type="submit" value="Beregn tilskud">
    </form>
</div>
<div id="hidden" class="jumbotron" style="margin-top:25px">
    <!-- Maybe use ;visibility:hidden with some javascript or something onclick -->
    <table class="table">
        <thead>
            <tr>
                <th scope="col"><b>Energiforbedring</b></th>
                <th scope="col"><b>Tilskud</b></th>
                <th scope="col"><b>Årlig besparelse</b></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var calculator in ViewBag.discounts.calculators)
            {
                <tr>
                    <td>@calculator.energyImprovement</td>
                    <td>@calculator.grant kr.</td>
                    <td>@calculator.yearlyDiscount kr/år.</td>
                </tr>

            }
        </tbody>
    </table>

</div>